# ======================================================================
# National Curriculum for England - Cross-Cutting Themes
# ======================================================================

# ----------------------------------------------------------------------
# Ontology Declaration
# ----------------------------------------------------------------------

<https://w3id.org/uk/curriculum/england/themes>
  rdf:type owl:Ontology ;

  rdfs:label "National Curriculum for England - Cross-Cutting Themes"@en ;
  dc:title "National Curriculum for England - Cross-Cutting Themes"@en ;
  rdfs:comment """Cross-cutting themes that span multiple subjects and provide connections 
  between different areas of the curriculum."""@en ;

  owl:versionInfo "0.1.0" ;
  owl:versionIRI <https://w3id.org/uk/curriculum/england/themes/0.1.0> ;
  owl:priorVersion <https://w3id.org/uk/curriculum/england/themes/0.0.9> ;
  
  dcterms:description """This ontology defines cross-cutting themes that span multiple subjects 
  in the National Curriculum for England, providing conceptual connections across different areas 
  of learning."""@en ;
  dc:creator "Department for Education" ;
  dcterms:created "2025-11-24"^^xsd:date ;
  dcterms:modified "2025-12-03"^^xsd:date ;
  dcterms:issued "2025-12-03"^^xsd:date ;
  
  dcterms:license <http://www.nationalarchives.gov.uk/doc/open-government-licence/version/3/> ;
  dcterms:rights "Crown Copyright"@en ;

  rdfs:seeAlso <https://www.gov.uk/government/collections/national-curriculum> ;
  vann:preferredNamespacePrefix "eng" ;
  vann:preferredNamespaceUri "https://w3id.org/uk/curriculum/england/" ;

  owl:imports <https://w3id.org/uk/curriculum/core/> .

# ----------------------------------------------------------------------
# Themes Taxonomy
# ----------------------------------------------------------------------

eng:themes-taxonomy
  a skos:ConceptScheme ;
  skos:prefLabel "English National Curriculum Cross-Cutting Themes"@en ;
  dcterms:description """Cross-cutting themes that appear across multiple subjects and provide 
  connections between different areas of the curriculum."""@en ;
  skos:hasTopConcept eng:theme-financial-education ,
                     eng:theme-digital-literacy ,
                     eng:theme-climate-change-and-sustainability ,
                     eng:theme-media-literacy .

# ----------------------------------------------------------------------
# Themes
# ----------------------------------------------------------------------

eng:theme-climate-change-and-sustainability
  a skos:Concept, curric:Theme ;
  skos:prefLabel "Climate and Sustainability"@en ;
  skos:definition """Understanding climate change, environmental impact, and promoting 
  sustainable practices."""@en ;
  skos:inScheme eng:themes-taxonomy ;
  skos:topConceptOf eng:themes-taxonomy .
